---
interface Props {
    titulo: string;
    titulomarcado:string;
    parrafo: string;
    imagen: string;
}
const {titulo,titulomarcado, parrafo, imagen} = Astro.props

import Image from 'astro/components/Image.astro';
---
<div class="grid grid-cols-2">
        <div class="flex items-center justify-center">
            <Image src={imagen} alt="..." width=150 class="pb-10" />
        </div>
        <div class="mx-4">
            {titulo}
            <mark class="px-2 text-white bg-amber-600 rounded dark:bg-blue-500">{titulomarcado}</mark> 
            <br>
            <br>
            {parrafo}
            <br>
            <hr class="w-48 h-1 mx-auto my-4 bg-gray-100 border-0 rounded md:my-10 dark:bg-gray-700">
            <br>
        </div>
    </div>
</div>